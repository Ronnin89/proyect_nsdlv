<p id="notice"><%= notice %></p>

<h1>Educators</h1>

<table>
  <thead>
    <tr>
      <th>Type educator</th>
      <th>Profile</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @educators.each do |educator| %>
      <tr>
        <td><%= educator.type_educator %></td>
        <td><%= educator.profile %></td>
        <td><%= link_to 'Show', educator %></td>
        <td><%= link_to 'Edit', edit_educator_path(educator) %></td>
        <td><%= link_to 'Destroy', educator, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

