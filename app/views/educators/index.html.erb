<%= render './dashboards/navbar' %>
<div id="jumbotron_educators" class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4 text-light">Nuestras Educadoras</h1>
        <br><br><br>
    </div>
</div>
<div class='container'>
<p id="notice"><%= notice %></p>
        <div class="row">
        <div class="col">
            <%= link_to "<button>Nueva Educadora</button>".html_safe, new_educator_path, remote: true  %>
        </div>
        <div class="col">
            <%= form_with(url: educators_path, method: :get, remote: true) do |form| %>
                <%= form.text_field :q %>
                <%= form.submit 'Buscar por nombre o apellido' %>
            <% end %>
        </div>  
        </div>

<hr>

    <div id='card_educators'>
        <% @educators.each do |educator|%>
                <div class="card mb-3" style="max-width: 540px;">
                    <div class="row no-gutters">
                        <div class="col-md-4">
                        <%= image_tag(educator.avatar.variant(resize: '190x200').processed, alt: 'imagen con problemas') if educator.avatar.attached? %>
                        </div>
                        <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">Nombre: <%= educator.names %> <%= educator.last_names %></h5><hr>
                            <p class="card-text">RUT: <%= educator.rut %></p><hr>
                            <p class="card-text">Fecha de nacimiento: <%= educator.date_of_birth %></p><hr>
                            <%= link_to "<button>Mas informaci√≥n</button>".html_safe, educator %>
                        </div>
                        </div>
                    </div>
                </div>
        <% end%>

    </div>

</div>

<div id="modal_new">
</div>

<%= render './dashboards/footer' %>


