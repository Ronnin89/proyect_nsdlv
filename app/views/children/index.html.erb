<p id="notice"><%= notice %></p>

<h1>Children</h1>

<table>
  <thead>
    <tr>
      <th>Id fundation</th>
      <th>Grade</th>
      <th>Phone secure</th>
      <th>Entry</th>
      <th>Egress</th>
      <th>Profile</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @children.each do |child| %>
      <tr>
        <td><%= child.id_fundation %></td>
        <td><%= child.grade %></td>
        <td><%= child.phone_secure %></td>
        <td><%= child.entry %></td>
        <td><%= child.egress %></td>
        <td><%= child.profile %></td>
        <td><%= link_to 'Show', child %></td>
        <td><%= link_to 'Edit', edit_child_path(child) %></td>
        <td><%= link_to 'Destroy', child, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

