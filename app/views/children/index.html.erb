<%= render './dashboards/navbar' %>
<div id="jumbotron_childs" class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4 text-light">Nuestros niñes</h1>
    </div>
</div>
<div class='container'>
<p id="notice"><%= notice %></p>
        <div class="row">
        <div class="col">
            <%= link_to "<button>Agregar un nuevo niñe</button>".html_safe, new_child_path, remote: true  %>
        </div>
        <div class="col">
            <%= form_with(url: children_path, method: :get, remote: true) do |form| %>
                <%= form.text_field :q %>
                <%= form.submit 'Buscar por nombre o apellido' %>
            <% end %>
        </div>  
        </div>

<hr>

    <div id='card_childs' class="card-columns">
        <% @childs.each do |child|%>
                <div class="card mb-3" style="max-width: 540px;">
                    <div class="row no-gutters">
                        <div class="col-md-4">
                        <%= image_tag(child.avatar.variant(resize: '130x130').processed, alt: 'imagen con problemas') if child.avatar.attached? %>
                        </div>
                        <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">Nombre: <%= child.names %> <%= child.last_names %></h5><hr>
                            <p class="card-text">RUT: <%= child.rut %></p><hr>
                            <p class="card-text">Fecha de nacimiento: <%= child.date_of_birth %></p><hr>
                            <%= link_to "<button>Mas información</button>".html_safe, child %>
                        </div>
                        </div>
                    </div>
                </div>
        <% end%>

    </div>

</div>

<div id="modal_new">
</div>

<%= render './dashboards/footer' %>